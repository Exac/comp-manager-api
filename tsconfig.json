{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        // "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "importHelpers": true,
        // "experimentalDecorators": true,
        "types": [
            "node",
            "mocha",
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    }
}